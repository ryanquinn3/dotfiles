[user]
  name = 'ryanquinn3'
  email = 'ryan3q@gmail.com'

[init]
  defaultBranch = 'main'
  autoSetupRemote = true

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true

[diff]
  colorMoved = default

[delta]
  navigate = true
  side-by-side = true
  hyperlinks = true
  hyperlinks-file-link-format = "vscode://file/{path}:{line}"

[alias]
    squash-all = "!f() { zsh -ic \"git_smart_squash $1\"; }; f"
